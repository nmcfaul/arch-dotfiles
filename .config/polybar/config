font-1 = "FontAwesome:pixelsize=9;1"
font-2 = "Wuncon Siji:pixelsize=9;1"
font-3 = "Weather Icons:pixelsize=9;1"

; modules-left = cpu temperature cmus spotify
modules-left = cpu temperature xwindow
modules-center = i3
modules-right = volume weather date

tray-position = left
tray-padding = 2
tray-transparent = false

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU: "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%


[module/temperature]
type = internal/temperature
interval = 0.5
format-padding = 2
thermal-zone = 0
format = <label>
format-warn = <label-warn>

label =  %temperature%
label-warn =  %temperature%
label-warn-foreground = ${colors.accent}


[module/volume]
type = internal/volume

mapping = true
master-mixer = Master
master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2

label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
format-muted-padding = 2
label-muted = sound muted

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/date]
type = internal/date
interval = 5

date = " %a %d.%m."
date-alt = " %d.%m.%Y."

time = "%I:%M %p "
time-alt = "%H:%M:%S "

format =  <label>

label = %date% %time%
label-foreground = ${colors.foreground}


[module/weather]
type = custom/script
interval = 300
format = <label>
label-font = 4
format-prefix-foreground = ${colors.foreground}
exec = ~/.config/polybar/weather
format-padding = 2


